<p style="color: green"><%= notice %></p>

<h1>Comments</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>

    <% if policy(comment).edit? %>
      <%= link_to "Edit this comment", edit_article_comment_path(@article, comment) %> |
    <% end %>

    <%= button_to "Destroy this comment", article_comment_path(@article, comment), method: :delete if policy(comment).destroy? %>
  <% end %>
</div>

<%= link_to "New comment", new_article_comment_path %>
